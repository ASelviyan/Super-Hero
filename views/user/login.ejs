<link rel="stylesheet" type="text/css" href="../css/style.css">
<% if(msg) { %>
    <div>
        <p><%= msg %></p>
    </div>
<%}%>
<div class="background">

<div class=" container">
     <div class='d-flex flex-column myFlexContainer justify-content-center align-items-center' >
        <div class="text-center interface">
        <h3 class="mb-0">Log In!</h3> 
        <p>-----------------------------------------</p> 
<form method="POST" action="/users/login">
    <div class="d-flex mb-2 justify-content-center align-items-center">
    <input type="text" id="email" name="email" placeholder="Enter Email" class="form-control"required >
    </div>

    <div class="d-flex mb-2 justify-content-center align-items-center">
    <input type="password" id="password" name="password" placeholder="Enter Password" class="form-control" required>
    </div>

    <div class="d-flex justify-content-center align-items-center ">
    <button type="submit" class="button btn btn-primary">Log in</button>
    </div>
</form>
</div>
   </div>
</div>
</div>